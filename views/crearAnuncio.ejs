<%- include('includes/sideBarAdmin.ejs') %>
    <h3 style="text-align: center;">Crear Anuncio</h3>


    <div class="row">
        <div class="col s12 m2 l13"></div>
        <div class="col s12 m8 l13">
            
            <div class="input-field">
                <textarea id="textareaTitulo" class="materialize-textarea"></textarea>
                <label for="textareaTitulo" class='active'>Titulo</label>
            </div>
            <div class="input-field">
                <textarea id="textareaTexto" class="materialize-textarea"></textarea>
                <label for="textareaTexto" class='active'>Escribe aquí...</label>
            </div>
            <form action="#">
                <div class="file-field input-field">
                  <div class="btn blue">
                    <span>Subir Imagen o Archivo</span>
                    <input type="file">
                  </div>
                  <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                  </div>
                </div>
            </form>
            <div class="row">
                <form class="col s12">
                    <div class="row">
                        <div class="input-field col s6">
                            <i class="material-icons prefix">date_range</i>
                            <input type="text" class="datepicker" placeholder="Selecciona la Fecha de Expiración">
                        </div>
                    </div>
                </form>
                <a class="waves-effect waves-light btn" style="margin-top: 20px; background-color: green;">Enviar</a>
            </div>
        </div>
    </div>
<%- include('includes/footer.ejs') %>