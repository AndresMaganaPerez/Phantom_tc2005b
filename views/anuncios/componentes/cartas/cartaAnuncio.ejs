<% for (anuncio of anuncios) { %>
    <div class="row">
        <div class="col s12 m2 l13"></div>
        <div class="col s12 m8 l13">
            <div class="card" style="border-radius: 15px;">
                <div class="card-content" style="padding: 10px;">
                    <div class="row" style="margin-bottom: 10px;">
                        <div class="col s8 m6 l6">
                            <span class="card-title activator black-text text-darken-4" style="padding-left: 30px;"><h4><%= anuncio.Titulo %></h4></span>
                        </div>
                        <div class="col s2 m4 l4"></div>
                        <div class="col s2 m2 l2">
                            <span class="card-title activator black-text text-darken-4" style="margin-top: 10px;"><h8 class="flow-text"><%= anuncio.Fecha.toString().substr(4,11) %></h8></span>
                        </div>
                    </div>
                    
                </div>
                <div class="card-content" style="padding-top:0px; padding-left: 30px;">
                    <p><%= anuncio.texto %></p>
                </div>
                <% if (rol == 'admin' || rol == 'recursosHumanos') { %>
                    <br>
                    <%- include ('../botones/botonModificarAnuncio.ejs') %>
                <% } %>
            </div>
        </div>
    </div>
<% } %>