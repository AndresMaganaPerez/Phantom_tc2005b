<h3 style="text-align: center;">Anuncios</h3>

<% if (rol == 'admin' || rol == 'recursosHumanos') { %>
    <br>
    <%- include ('componentes/botones/botonCrearAnuncio.ejs') %>
<% } %>

<% if (flag == 'fail') { %>
    <div class="center">
        <span style="font-weight: 450; color: green;">
            Anuncio creado exitosamente
        </span>
    </div>
<% } %>

<% if (anunciosUnpinned.length > 0 || anunciosPinned.length > 0) { %>
    <%- include('componentes/cartas/cartaAnuncio.ejs', {anunciosPinned: anunciosPinned, anunciosUnpinned: anunciosUnpinned}) %>
<% } else { %>
    <h3 class="center" style="text-align: center">No hay anuncios publicados</h3>
<% } %>

