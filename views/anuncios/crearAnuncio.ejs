<%- include('../includes/sideBarGeneral.ejs') %>

<div class="row">
    <div class="col s12 m4 l13"></div>
    <div class="col s12 m4 l13">
        <div class="card " style="border-radius: 15px;">
            <h3 style="text-align: center; padding-top: 20px;">Crear Anuncio</h3>
            
            <p class="center">Fecha Actual: <%= fechaDeHoy %></p>
            
            <% if (flag == 'success') { %>
                <%- include('componentes/cartas/cartaAnuncioExitoso.ejs') %>
            <% } %>
    
            <form action="/anuncios/nuevo" method="POST" enctype="multipart/form-data">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>" >
                <div style="padding: 0px 120px">
                    <label>
                      <input type="checkbox" class="filled-in" checked="checked" name="pin">
                      <span>¿Pinear el anuncio?</span>
                    </label>
                </div>
                <div style="padding: 0px 30px;">
                    <h5>Título:</h5>
                    <input placeholder="Ingresa el título aquí" id="Titulo" type="text" class="validate" name="titulo" required>
                </div>
                <div class="input-field" style="padding: 0px 30px">
                    <h5>Contenido:</h5>
                    <textarea placeholder="Escriba aquí..." id="textareaTexto" class="materialize-textarea" name="texto" required></textarea>
                </div>
                
                <div style="padding: 0px 30px;">
                    <h5>Fecha de expiración:</h5>
                    <input type="date" placeholder="AAAA-MM-DD" id="expiracion" name="expiracion" value="<%= fechaDefault %>" required>
                </div>

                <% if (flag == 'fail') { %>
                    <div class="center">
                        <span style="font-weight: 450; color: red;">
                            La fecha ingresada es incorrecta
                        </span>
                    </div>

                    <script>
                        let fecha = document.getElementById("expiracion");
                        fecha.style = ("border: 1px solid; border-color: red;");
                    </script>
                <% } %>

                <div class="file-field input-field"style="padding: 0px 30px">
                    <div class="btn blue">
                      <span>Subir imagen</span>
                      <input type="file" accept="image/png, image/jpg, image/jpeg" name="image">
                    </div>
                    <div class="file-path-wrapper">
                      <input class="file-path validate" type="text">
                    </div>
                </div>
                
                <br>    
                
                <div class="left-align" style="padding-left: 30px; ">
                    <span style="font-weight: bold;">*</span> Los anuncios tienen una fecha de expiración de 2 meses
                </div>

                <div class="center" style="padding-top: 20px;">
                    <button class="btn waves-effect waves-light green" type="submit" name="action" style="margin-bottom: 50px;">Enviar
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </form>

<%- include('../includes/footer.ejs') %>