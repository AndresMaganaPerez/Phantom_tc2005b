<a href="#modificarEmpleado?empleado= <%= empleado.idEmpleado %>" class="btn-large light-blue darken-3 modal-trigger" style="font-weight: 600;">Modificar</a>

<div id="modificarEmpleado?empleado= <%= empleado.idEmpleado %>" class="modal">
    <div class="modal-content">
        <form action="/empleados/empleados_registradosM" method="POST">

            <h4>Modificacion de empleado: <%= empleado.nombre + ' ' + empleado.apellidoPaterno + ' ' + empleado.apellidoMaterno%></h4>
                <div class="row">
                    <div class="input-field col s12 m12 l13">
                        <input name="fechaIng" id="fechaIng" type="date" value="<%empleado.fechaIngr%>"  required>
                        <label for="fechaIng">Fecha de ingreso a la empresa</label>
                    </div>
                    <div class="input-field col s12 m12 l13">
                        <input name="ngb" id="ngb" type="number" placeholder="<%empleado.cantidadNatgasBlocks%>" min="0" max="5" value="<%=empleado.cantidadNatgasBlocks%>"required>
                        <label for="ngb" >Cantidad de Natgas Blocks del empleado</label>
                    </div>
                    <div class="input-field col s12 m12 l13">
                        <input name="vacLey" id="vacLey" type="number" placeholder="<%empleado.numVacacionesLey%>" min="0" value="<%=empleado.numVacacionesLey%>" required>
                        <label for="vacLey" >Cantidad de vacaciones ley</label>
                    </div>
                    <div class="input-field col s12 m12 l13">
                        <input name="vacPremio" id="vacPremio" type="number" placeholder="<%empleado.numVacacionesPremio%>" min="0" value="<%=empleado.numVacacionesPremio%>" required>
                        <label for="vacPremio" >Cantidad de vacaciones premio</label>
                    </div>
                    <div class="input-field col s12 m12 l13">
                        <select name="plaza" id="plaza" required>
                            <option value="<%= empleado.idPlaza %>"><%= empleado.nombrePlaza %></option>
                            <% for (let plaza of plazas) { %>
                                <option value="<%= plaza.idPlaza %>"><%= plaza.nombrePlaza %></option>
                            <% } %>
                        </select>
                        <label for="plaza">Plaza</label>
                    </div>
                    <div class="input-field col s12 m12 l13">
                        <select name="area" id="area" required>
                            <option value="<%= empleado.idArea %>"><%= empleado.nombreArea%></option>
                            <% for (let area of areas) { %>
                                <option value="<%= area.idArea %>"><%= area.nombre %></option>
                            <% } %>
                        </select>
                        <label for="area">Area</label>
                    </div>
                    <div class="input-field col s12 m12 l13">
                        <select name="lider" id="lider" required>
                            <option value="<%=empleado.idLider%>"><%= empleado.NombreLider + ' ' + empleado.ApellidoPLider + ' ' + empleado.ApellidoMLider %></option>
                        <% for (let area of areas) { %>
                            <optgroup label="<%= area.nombre %>" >
                                <% for (let lider of lideres) { %>
                                    <% if (lider.nombreArea == area.nombre) { %> 
                                        <option value="<%= lider.idLider %>"><%= lider.nombre + ' ' + lider.apellidoPaterno + ' ' + lider.apellidoMaterno %></option>
                                    <% } %>
                                <% } %> 
                            </optgroup>
                        <% } %>
                        </select>
                        <label for="lider">Lider del empleado</label>
                    </div>
                    <div class="input-field col s12 m12 l13">
                        <select name="rol" id="rol" required>
                            <option value="<%= empleado.idRol %>"><%= empleado.nombreRolEmpresa%></option>
                            <% for (let rol of roles) { %>
                                <% if (rol.descripcionRol != 'admin') { %>
                                    <option value="<%= rol.idRol %>"><%= rol.nombreRolEmpresa%></option>
                                <% } %>
                            <% } %>
                        </select> 
                        <label for="rol">Rol del empleado en el sistema</label>
                    </div>
                    <div class="input-field col s12 m2 l13" style="display: inline-flex;">
                        <input value="<%= empleado.idEmpleado %>" name="idEmpleado" hidden>
                        <input id="registrar" class="btn green" type="submit" value="Modificar">
                        <span style="margin-left: 1.6vw;"></span>
                        <input class="btn red modal-close" type="button" value="Cancelar"
                        >
                    </div>
                </div>
            </form>
    </div>
</div>