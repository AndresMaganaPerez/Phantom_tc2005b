<%- include('includes/sideBarAdmin.ejs') %>
    <h3 style="text-align: center;">Agregar Banner</h3>

    <div class="row">
        <div class="col s12 m2 l13"></div>
        <div class="col s12 m8 l13">
            <div class="right-align" style="padding-top: 20px;">
                <button class="btn waves-effect waves-light blue" action="#" style="margin-bottom: 10px;">
                    <i class="material-icons left">add</i>
                    <span>Agregar</span>
                </button>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col s12 m2 l13"></div>
        <div class="col s12 m8 l13">
            <div class="card"  style="border-radius: 15px; padding: 40px 40px;">
                <div class="card-content center" style="padding: 10px; border: dashed grey;">
                    <h4>Subir Imagen</h4>
                    <div class="form" action="#" method="POST">
                        <div class="file-field input-field">
                            <div class="row">
                                <input type="file" accept="image/png, image/jpg, image/jpeg" name="image">
                                <img src="https://cdn.picpng.com/icon/upload-files-icon-66763.png" style="width: 100px; height: 100px; margin-top: 10px;">
                            </div>
                        </div>
                        <label for="expiracion" style="font-weight: bold; color: black; margin-right: 10px;">Fecha de Expiraci√≥n</label>
                        <input type="date" class="datepicker" name="expiracion" required style="width: 200px; margin-top: 10px;">
                        <div class="center" style="padding-top: 20px;">
                            <button class="btn waves-effect waves-light green" type="submit" name="action" style="margin-bottom: 50px;">Postear
                                <i class="material-icons right">send</i>
                            </button>
                        </div>
                    </div>
                    
                </div>  
                
            </div>
            
        </div>
    </div>



