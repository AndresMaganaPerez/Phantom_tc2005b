<%- include('../includes/sideBarGeneral.ejs') %>

<div class="row">
    <div class="col s12 m4 l13"></div>
    <div class="col s12 m4 l13">
        <div class="card " style="border-radius: 15px;">
            <h3 class="center" style="padding-bottom: 0px; padding-top: 20px;">MI SOLICITUD DE VACACIONES</h3>
            <p class="center">Fecha de la solicitud: dd/mm/aa</p>
            <h5 class="center">Vacaciones disponibles:</h5>
            <h6 class="center">7</h6>
    
    
    
            <form action="/vacaciones/solicitudes_mis_vacaciones" method="POST">
                <div style="padding: 0px 30px;">
                    <h5>Fecha inicio</h5>
                    <input type="date" placeholder="AAAA-MM-DD" name="fechaInicio" required>
                </div>
                <div style="padding: 0px 30px;">
                    <h5>Fecha fin</h5>
                    <input type="date" placeholder="AAAA-MM-DD" name="fechaFin" required>
                </div>
                <div style="padding: 0px 30px;">
                    <h5>Suplente:</h5>
                    <input placeholder="Ingresa el nombre aquí" id="first_name" type="text" class="validate" name="suplente" required>
                </div>
                <br>    
                <div class="left-align" style="padding-left: 30px; ">
                    <span style="font-weight: bold;">*</span> Una vez enviada, podrás checar el estatus de tu solicitud en "Mis Vacaciones"
                </div>
                
                <div class="center" style="padding-top: 20px;">
                    <button class="btn waves-effect waves-light green" type="submit" name="action" style="margin-bottom: 50px;">Enviar
                        <i class="material-icons right">send</i>
                    </button>
                </div>
                
                
            </form>
            
        </div>
    </div>
</div>
    


