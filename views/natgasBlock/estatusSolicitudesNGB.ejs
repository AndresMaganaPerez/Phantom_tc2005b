<%- include('../includes/sideBarGeneral.ejs') %>
<h4 class="center">Estatus de Solicitudes de NGB</h4>

<% if (rol == 'recursosHumanos') { %>
    <%- include('componentes/botones/botonRealizarSol') %>
<% } %>

<% if (rol == 'admin') { %>
    <%- include('componentes/botones/botonResponderSol.ejs') %>
<% } %>

<br>

<%- include('componentes/bloques/bloqueDropDown_MesArea_BotonDescarga.ejs') %>

<% if (solicitudes.length > 0) { %>
    <%- include('componentes/cartas/cartaConsultarEstatus.ejs') %>
    <ul class="pagination center">
        <% if (page > 1) { %>
            <li class="waves-effect"><a href="/natgas_blocks/solicitudes_estatus_natgas_block/?page=1"><i class="material-icons">first_page</i></a></li>
            <li class="waves-effect"><a href="/natgas_blocks/solicitudes_estatus_natgas_block/?page=<%= page - 1%>"><i class="material-icons">chevron_left</i></a></li>
        <% } else { %>
            <li class="disabled"><a href="#!"><i class="material-icons">chevron_left</i></a></li>
        <% } %>
        <% for (let i = iterator; i <= paginaFinal; i++) { %>
            <% if (i == page) { %>
                <li class="active light-blue darken-4"><a href="/natgas_blocks/solicitudes_estatus_natgas_block/?page=<%= i%>"><%= i %></a></li>
                <% continue; %>
            <% } %>
            <li class="waves-effect"><a href="/natgas_blocks/solicitudes_estatus_natgas_block/?page=<%= i%>"><%= i %></a></li>
        <% } %>
        <% if (page < numeroDePaginas) { %>
            <li class="waves-effect"><a href="/natgas_blocks/solicitudes_estatus_natgas_block/?page=<%= page + 1%>"><i class="material-icons">chevron_right</i></a></li>
            <li class="waves-effect"><a href="/natgas_blocks/solicitudes_estatus_natgas_block/?page=<%= numeroDePaginas%>"><i class="material-icons">last_page</i></a></li>
        <% } else { %>
            <li class="disabled"><a href="#!"><i class="material-icons">chevron_right</i></a></li>
        <% } %>
    </ul>
<% } else{  %>
    <h4>No hay Solicitudes de NGB</h4>
<% } %>

<%- include('../includes/footer.ejs') %>

